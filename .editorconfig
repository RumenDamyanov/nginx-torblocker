# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Makefiles require tabs
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Debian packaging rules file (must use tabs)
[debian/rules]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4
indent_style = space
shell_variant = bash
binary_next_line = true
switch_case_indent = true
space_redirects = true

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# C source code
[*.{c,h}]
indent_size = 4
indent_style = space

# Configuration files
[*.{conf,ini}]
indent_size = 2
